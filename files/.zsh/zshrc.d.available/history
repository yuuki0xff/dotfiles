
HISTFILE="$HOME/.zsh/history"
HISTSIZE=100000000
SAVEHIST=$HISTSIZE

setopt hist_verify	#履歴検索したときすぐに実行せず編集可能状態に
#setopt append_history	#コマンド履歴に追記していく
setopt inc_append_history	#リアルタイムに書き出す
setopt share_history
setopt hist_ignore_dups
setopt hist_ignore_space
setopt hist_no_store

autoload history-pattern-search

