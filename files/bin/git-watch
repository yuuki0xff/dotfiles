#!/bin/sh
# git-watch - execute a program when files change.
#
# USAGE:
#   git-watch [CMD] [ARGS]
#
#   CMD: command name.  default command is "make".
#   ARGS: arguments of the command.
#
# EXAMPLE:
#   git watch
#   git watch make test

set -eu

if [ "$#" -eq 0 ]; then
	# Set default args
	set make
fi

while sleep 1; do
	git ls-files |entr -d -- "$@"
done
